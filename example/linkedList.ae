[]        = []
A : (l B) = A : B

l []      = []
l (A : B) = A : B

(A : B) + (l C) = A : (B + C)

foldr Fn I []      = I
foldr Fn I (X : L) = Fn X (foldr Fn I L)

foldl Fn I []      = I
foldl Fn I (X : L) = foldl Fn (Fn I X) L

# convenience

product L = foldl (_*_) 1 L

L([ _, _ ])~ = L(_ : _ : [])~
